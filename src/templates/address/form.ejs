<div class="bg-blue-1 round-1 p-2">
  <fieldset>
    <legend>
      {{ ctx.tk('label') }}
    </legend>

    {% const desc = ctx.tk('description') %}
    {% if (desc) { %}
      <div class="f-2 mb-2">{{ desc }}</div>
    {% } %}

    <div ref="{{ ctx.nestedKey }}">
      {{ ctx.children }}
    </div>
  </fieldset>
</div>
