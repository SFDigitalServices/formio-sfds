<{{ctx.input.type}}
  {{ ctx.attrs({
    ref: 'button',
    ...ctx.input.attr,
    class: `btn btn-${ctx.transform('theme', ctx.component.theme)} ${ctx.input.attr.class || ''} ${ctx.component.customClass}`
  }) }}
>
{% if (ctx.component.leftIcon) { %}<span class="{{ctx.component.leftIcon}}"></span>&nbsp;{% } %}
{{ctx.input.content}}
{% if (ctx.component.tooltip) { %}
  <i ref="tooltip" class="{{ctx.iconClass('question-sign')}} text-muted"></i>
{% } %}
{% if (ctx.component.rightIcon) { %}&nbsp;<span class="{{ctx.component.rightIcon}}"></span>{% } %}
</{{ctx.input.type}}>
