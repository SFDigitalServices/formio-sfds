{% const visible = ctx.component.properties.visible !== "false" %}
<div ref="{{ ctx.nestedKey }}" class="{{ visible ? ' bg-blue-1 p-2 round-1' : '' }}">
  {% const desc = ctx.tk('description') %}
  {% if (desc) { %}
    <p class="description mt-0 mb-1">{{ desc }}</p>
  {% } %}
  {{ ctx.children }}
</div>
